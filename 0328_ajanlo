using System;
using System.Collections.Generic;
using System.Data.SqlClient;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using MySql.Data.MySqlClient;


namespace _0328_ajanlo
{
    internal class Program
    {
        private const string ConnectionString = "Server=localhost;Database=ajanlorendszer;Uid=root;Pwd=;";
        static void Leggyakoribb()
        {
            using (var connection = new MySqlConnection(ConnectionString))
            {
                connection.Open();
                string query = "SELECT szam, COUNT(szam) as gyakorisag FROM szamok GROUP BY szam ORDER BY gyakorisag DESC LIMIT 1";
                using (var command = new MySqlCommand(query, connection))
                using (var reader = command.ExecuteReader())
                {
                    while (reader.Read())
                    {
                        Console.WriteLine($"A leggyakoribb szám: {reader["szam"]}, Gyakoriság: { reader["gyakorisag"]}");
                    }
                }
            }
        }

        static void Main(string[] args)
        {
            using (var connection = new MySqlConnection(ConnectionString))
            {
                connection.Open();

                for (int i = 1; i <= 10; i++)
                {
                    string query = "INSERT INTO szamok (szam)VALUES(@bekert)";
                    using (var command = new MySqlCommand(query, connection))
                    {

                        Console.WriteLine($"Kérem a(z) {i}. számot:");
                        int bekert = int.Parse(Console.ReadLine());
                        command.Parameters.AddWithValue("@bekert", bekert);

                        command.ExecuteNonQuery();
                    }
                }
            }

            Leggyakoribb();



            Console.ReadKey();
        }
    }
}
